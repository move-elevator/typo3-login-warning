{
	"name": "move-elevator/typo3-login-warning",
	"description": "Extends the TYPO3 backend login warning_mode functionality to inform about suspicious logins with several features.",
	"license": [
		"GPL-2.0-or-later"
	],
	"type": "typo3-cms-extension",
	"authors": [
		{
			"name": "Konrad Michalik",
			"email": "km@move-elevator.de",
			"role": "Maintainer"
		}
	],
	"require": {
		"php": "~8.2.0 || ~8.3.0 || ~8.4.0 || ~8.5.0",
		"ext-filter": "*",
		"psr/event-dispatcher": "^1.0",
		"psr/http-client": "^1.0",
		"psr/http-message": "^1.0 || ^2.0",
		"psr/http-server-handler": "^1.0",
		"psr/http-server-middleware": "^1.0",
		"psr/log": "^3.0.1",
		"symfony/mailer": "^6.4 || ^7.0",
		"symfony/mime": "^6.4 || ^7.0",
		"typo3/cms-backend": "^12.0 || ^13.0 || ^14.0",
		"typo3/cms-beuser": "^12.0 || ^13.0 || ^14.0",
		"typo3/cms-core": "^12.0 || ^13.0 || ^14.0",
		"typo3fluid/fluid": "^2.15 || ^4.2 || ^5.0"
	},
	"require-dev": {
		"eliashaeussler/version-bumper": "^2.4 || ^3.0",
		"helhum/typo3-console": "^7.0 || ^8.1 || dev-support-typo3-v14",
		"mobiledetect/mobiledetectlib": "^4.8",
		"phpunit/phpcov": "^9.0 || ^10.0 || ^11.0",
		"phpunit/phpunit": "^10.2 || ^11.0 || ^12.0",
		"typo3/cms-base-distribution": "^12.4 || ^13.4 || ^14.0",
		"typo3/cms-lowlevel": "^12.4 || ^13.4 || ^14.0"
	},
	"suggest": {
		"mobiledetect/mobiledetectlib": "Provides more accurate and comprehensive browser/OS/device detection. Falls back to basic detection if not installed."
	},
	"repositories": [
		{
			"type": "vcs",
			"url": "git@github.com:jackd248/TYPO3-Console.git",
			"name": "typo3-console"
		}
	],
	"autoload": {
		"psr-4": {
			"MoveElevator\\Typo3LoginWarning\\": "Classes/"
		}
	},
	"config": {
		"allow-plugins": {
			"eliashaeussler/version-bumper": true,
			"helhum/dotenv-connector": true,
			"php-http/discovery": true,
			"typo3/class-alias-loader": true,
			"typo3/cms-composer-installers": true
		},
		"sort-packages": true
	},
	"extra": {
		"konradmichalik/php-cs-fixer-preset": {
			"copyright": 2025
		},
		"typo3/cms": {
			"cms-package-dir": "{$vendor-dir}/typo3/cms",
			"extension-key": "typo3_login_warning",
			"web-dir": "public"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"@cgl install"
		],
		"cgl": "@composer -d Tests/CGL --",
		"test": "@test:coverage --no-coverage",
		"test:coverage": "XDEBUG_MODE=coverage phpunit -c phpunit.xml"
	}
}
